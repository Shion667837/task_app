<% provide(:title, "Index") %>
<h3>スケジュール一覧</h3>
<table align="center">
  <thead>
    <th>ID</th>
    <th>タイトル</th>
    <th>スケジュール更新日時</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><%= post.start_on %></td>
      <td><%= post.end_on %></td>
      <td><a class="link-btn" href="/posts/<%= post.id %>">確認</a></td>
      <td><%= link_to "編集", edit_post_path(post), class:"link-btn" %></td>
      <td><a class="link-btn" href="/posts/delete/<%= post.id %>">削除</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h3><%= link_to "スケジュール新規登録", new_post_path, class:"link-btn" %></h3>
